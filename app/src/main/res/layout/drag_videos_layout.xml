<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="#00000000"
  android:padding="5dp"
  >

  <android.support.constraint.ConstraintLayout
    android:id="@+id/drag_view_items_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/drag_content_bolder_normal"
    android:padding="4dp"
    >

  <ImageView
    android:id="@+id/drag_contents_imageview"
    android:layout_width="80dp"
    android:layout_height="48dp"
    android:scaleType="centerInside"
    android:contentDescription="@string/empty_description"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/drag_contents_textview"
    />

  <TextView
    android:id="@+id/drag_contents_textview"
    android:layout_width="80dp"
    android:layout_height="20dp"
    android:textSize="10sp"
    android:textColor="@color/color_all_white"
    android:background="#D06030"
    android:gravity="center"
    android:layout_marginBottom="1dp"
    app:layout_constraintTop_toBottomOf="@+id/drag_contents_imageview"
    app:layout_constraintLeft_toLeftOf="@+id/drag_contents_imageview"
    app:layout_constraintRight_toRightOf="@+id/drag_contents_imageview"
    tools:text="@string/app_name"
    tools:ignore="SmallSp"
    />
  </android.support.constraint.ConstraintLayout>
</RelativeLayout>