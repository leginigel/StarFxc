<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:clipChildren="false"
    android:clipToPadding="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:id="@+id/button_chi"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@color/color_pink"
            android:text="华语"
            android:textColor="#FFF8F8F8" />

        <Button
            android:id="@+id/button_hon"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@color/color_orange"
            android:text="香港"
            android:textColor="#FFF8F8F8" />

        <Button
            android:id="@+id/button_ame"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@color/color_yellow"
            android:text="美国"
            android:textColor="#FFF8F8F8" />

        <Button
            android:id="@+id/button_eur"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@color/color_green"
            android:text="欧洲"
            android:textColor="#FFF8F8F8" />

        <Button
            android:id="@+id/button_jap"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@color/color_cyan"
            android:text="日本"
            android:textColor="#FFF8F8F8" />

        <Button
            android:id="@+id/button_kor"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@color/color_blue"
            android:text="韩国"
            android:textColor="#FFF8F8F8" />

        <Button
            android:id="@+id/button_tha"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@color/color_purple"
            android:text="全部"
            android:textColor="#FFF8F8F8" />

    </LinearLayout>
