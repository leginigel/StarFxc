<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="13dp"
    android:layout_marginRight="20dp">

    <include
        android:id="@+id/include_media_info"
        layout="@layout/media_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/mediainfo_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_toEndOf="@id/pre_video"/>

    <Button
        android:id="@+id/plot_txt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/color_all_white"/>

    <include
        android:id="@+id/include_media_action"
        layout="@layout/media_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>